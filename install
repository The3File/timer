# vim: ft=sh
PREFIX="${PREFIX:-/usr/local}"
bin_dir="${PREFIX}"
man_dir="${PREFIX}/share"

fail(){ [[ $1 ]] && printf '%s\n' "failed: $1"; exit 1;}
success(){ printf '%s\n' "successfully $1";}

install(){
	for bin in ${bins[@]};{ copy "$bin";}
	for man in ${mans[@]};{ copy "$man";}
	success "installed"
}

