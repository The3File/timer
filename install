copy(){
	local dest="${PREFIX}/$1"
	[[ "$dest" -ot "$1" || ! -a $dest ]] || fail "nothing to do"
	cp -rf $1 "${dest//man\//share\/man/}" || fail $_
}

remove(){
	local dest="${PREFIX}/$1"
	[[ "$dest" ]] || return 1
	rm "${dest//man\//share\/man/}" || fail "remove"
}

for bin in bin/*;{ [[ -a $bin ]] && bins+=($bin);}
for man in man/*/*.[0-9];{ [[ -a $man ]] && mans+=($man);}

