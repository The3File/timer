#!/usr/bin/env bash

h="${1%%:*}"; m="${1##$h:}"; m="${m%%:*}"
[[ $1 =~ $h:$m:[0-9] ]] && s="${1##$h:$m:}" || s=00

printf -v ch '%(%H)T' "-1"
printf -v cm '%(%M)T' "-1"
printf -v cs '%(%S)T' "-1"

((h=h<ch?(h+24)-ch:h-ch))
((m=m<cm?60-cm+m:m-cm))
((s=s<cs?60-cs+s:s-cs))

printf -v time '%02d:%02d:%02d' "$h" "$m" "$s"
timer "$time"
