PREFIX="${PREFIX:-/usr/local}"

bin_dir="${PREFIX}/bin"
bin="timer"

man_dir="${PREFIX}/share/man/man1"
man="doc/timer.1"

install(){
	copy  "$bin" "$bin_dir"
	copy  "$man" "$man_dir"
}

uninstall(){
	remove "${bin_dir}/${bin##*/}"
	remove "${man_dir}/${man##*/}"
}

copy(){
	[[ "$1" -nt "${2}/${1}" ]] || return
	cp -rf $1 $2
	printf '%s\n' "installed to $2"
}

remove(){
	[[ -a "$1" ]] || return
	rm $1
	printf '%s\n' "uninstalled $1"
}

case $1 in
	u*) uninstall ;;
	'') install ;;
esac
